<?xml version="1.0"?>

<PropertyList>

  <!-- FlyCamOne-3 Camera Control -->

  <!-- Tilt -->
  <component>
    <module>pi_simple_controller</module>
    <name>Tilt</name>
    <debug type="bool">false</debug>
    <enable>
      <prop>/autopilot/locks/pointing</prop>
      <value>on</value>
    </enable>
    <input>
      <prop>/pointing/tilt_deg</prop>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
      <offset_value>0.0</offset_value>
    </output>
    <config>
      <Kp>0.0125</Kp>        <!-- proportional gain -->
      <u_min>-1.5</u_min>  <!-- minimum output clamp -->
      <u_max>1.5</u_max>   <!-- maximum output clamp -->
    </config>
  <component>

  <!-- Roll -->
  <component>
    <module>pi_simple_controller</module>
    <name>Roll</name>
    <debug type="bool">false</debug>
    <enable>
      <prop>/autopilot/locks/pointing</prop>
      <value>on</value>
    </enable>
    <input>
      <prop>/pointing/roll_deg</prop>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <prop>/controls/flight/aileron</prop>
      <offset_value>0.0</offset_value>
    </output>
    <config>
      <Kp>0.0125</Kp>	  <!-- proportional gain -->
      <u_min>-1.5</u_min> <!-- minimum output clamp -->
      <u_max>1.5</u_max>  <!-- maximum output clamp -->
    </config>
  <component>

</PropertyList>
