<?xml version="1.0"?>

<PropertyList>

  <!-- L1 config parameters, this drives bank angle (implementation in -->
  <!-- route_mgr/task_circle_coord) -->
  <L1-controller>
    <bank-limit-deg>30</bank-limit-deg>
    <period>20</period>
    <damping>0.7</damping>
  </L1-controller>

  <!-- Bank angle hold -->
  <pid-controller>
    <name>Roll angle hold</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/roll</prop>
      <value>aileron</value>
    </enable>
    <input>
      <prop>/orientation/roll-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-roll-deg</prop>
      <!-- <value>0.0</value> -->
    </reference>
    <output>
      <prop>/controls/flight/aileron</prop>
    </output>
    <config>
      <!-- 4/4/2013 P=-0.025 I=1.00 min/max = 0.20, seems way slow and laggy, and saturates -->
      <!-- 4/7/2013 P=-0.05 I=1.00 min/max = 0.25, seems even more wild -->
      <!-- 4/7/2013 P=-0.01 I=0.50 min/max = 0.25, tons of overshoot and oscillations -->
      <!-- 4/7/2013 P=-0.01 I=2.00 min/max = 0.25, still tons of overshoot -->
      <!-- 4/8/2013 P=-0.01 I=10.00 min/max = 0.25, improving, but still overshooting -->
      <!-- 4/8/2013 P=-0.007 I=10.00 min/max = 0.25, -->
      <!-- 4/8/2013 P=0.007 I=10.00 min/max = 0.25, Res3 #3 Seemed like not pushing hard enought to get rid of long term error, but really jumpy -->
      <!-- 5/24/2013 P=0.005 I=5.00 min/max = 0.25, Res3 #3 maybe still too snappy? -->
      <!-- 6/17/2013 P=0.004 I=2.00 min/max = 0.25, Res3 #3 seeking better convergence -->
      <Kp>0.04</Kp>      <!-- proportional gain-->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>2.0</Ti>        <!-- integrator time -->
      <Td>0.0001</Td>      <!-- derivator time -->
      <u_min>-0.75</u_min> <!-- minimum output clamp -->
      <u_max>0.75</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

  <!-- simple (but runtime tuneable) autocoordination driving rudder in direct proportion to aileron -->
  <pi-simple-controller>
    <name>Auto Coordination</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/yaw</prop>
      <value>autocoord</value>
    </enable>
    <input>
      <prop>/controls/flight/aileron</prop>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <prop>/controls/flight/rudder</prop>
    </output>
    <config>
      <Kp>-0.5</Kp>        <!-- proportional gain -->
      <Ki>0.0</Ki>         <!-- integral gain -->
      <u_min>-1.0</u_min> <!-- minimum output clamp -->
      <u_max>1.0</u_max>  <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

  <!-- Altitude hold. -->

  <!-- Drive the throttle based on altitude error -->
  <pid-controller>
    <name>Altitude Hold</name>
    <description>Pressure altimeter based, references AGL</description>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/altitude</prop>
      <value>throttle</value>
    </enable>
    <input>
      <prop>/position/altitude-agl-ft</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-agl-ft</prop>
      <!-- <value>500</value> -->
    </reference>
    <output>
      <prop>/controls/engine/throttle</prop>
    </output>
    <!-- 5/24/2013, Kp=0.006 Ti=20.0 didn't seem to be pushing up to target -->
    <!-- 5/26/2013, Kp=0.006 Ti=10.0 -->
    <config>
      <Kp>0.02</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>20.0</Ti>        <!-- integrator time -->
      <Td>0.00001</Td>     <!-- derivator time -->
      <u_min>0.0</u_min>   <!-- minimum output clamp -->
      <u_max>0.6</u_max>   <!-- maximum output clamp -->
    </config>
  </pid-controller>

  <!-- Hold speed by varying elevator (2-stage approach) --> 
  <pid-controller>
    <name>Speed Hold 1</name>
    <description>Stage #1, drive target pitch angle from speed error</description>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>pitch</value>
    </enable>
    <input>
      <prop>/velocity/airspeed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </output>
    <config>
      <Kp>-1.5</Kp>        <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>20.0</Ti>         <!-- integrator time -->
      <Td>0.000001</Td>    <!-- derivator time -->
      <u_min>-5.0</u_min> <!-- minimum output clamp -->
      <u_max>15.0</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

  <pid-controller>
    <name>Speed Hold 2</name>
    <description>Stage #2, Drive elevator to hold target pitch angle</description>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/pitch</prop>
      <value>elevator</value>
    </enable>
    <input>
      <prop>/orientation/pitch-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
    </output>
    <config>
      <!-- 6/27/2013 Kp=-0.010 a=0.5 Ti=10.0 Td=1.0 : ran to extremes and pegged -->
      <!-- 6/17/2013 Kp=0.010 a=0.5 Ti=10.0 Td=1.0 :  -->
      <Kp>-0.08</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>         <!-- integrator time -->
      <Td>0.0001</Td>      <!-- derivator time -->
      <u_min>-0.80</u_min>  <!-- minimum output clamp -->
      <u_max>0.00</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

  <!-- Hold speed by varying elevator (direct, 1-stage approach) --> 
  <pid-controller>
    <name>Speed hold (vary elevator)</name>
    <description>direct, 1-stage, vary elevator</description>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>elevator-direct</value>
    </enable>
    <input>
      <prop>/velocity/airspeed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
    </output>
    <config>
      <!-- 6/27/2013 Kp=-0.010 a=0.5 Ti=10.0 Td=1.0 : ran to extremes and pegged -->
      <!-- 6/17/2013 Kp=0.010 a=0.5 Ti=10.0 Td=1.0 :  -->
      <Kp>0.015</Kp>       <!-- proportional gain -->
      <beta>1.00</beta>     <!-- input value weighing factor -->
      <alpha>0.25</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>8.0</Ti>        <!-- integrator time -->
      <Td>1.2</Td>     <!-- derivator time -->
      <u_min>-0.80</u_min>  <!-- minimum output clamp -->
      <u_max>0.05</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

</PropertyList>
