<?xml version="1.0"?>

<PropertyList>

  <!-- L1 config parameters, this drives bank angle (implementation in -->
  <!-- route_mgr/task_circle_coord) -->
  <L1_controller>
    <bank_limit_deg>25</bank_limit_deg>
    <period>22</period>
    <damping>1.5</damping>
  </L1_controller>

  <!-- Bank angle hold -->
  <pid_controller>
    <name>Roll angle hold</name>
    <description>Built in L1 controller sets target roll angle</description>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/roll</prop>
      <value>aileron</value>
    </enable>
    <input>
      <prop>/orientation/roll_deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_roll_deg</prop>
      <!-- <value>0.0</value> -->
    </reference>
    <output>
      <prop>/controls/flight/aileron</prop>
    </output>
    <config>
      <!-- 4/4/2013 P=-0.025 I=1.00 min/max = 0.20, seems way slow and laggy, and saturates -->
      <!-- 4/7/2013 P=-0.05 I=1.00 min/max = 0.25, seems even more wild -->
      <!-- 4/7/2013 P=-0.01 I=0.50 min/max = 0.25, tons of overshoot and oscillations -->
      <!-- 4/7/2013 P=-0.01 I=2.00 min/max = 0.25, still tons of overshoot -->
      <!-- 4/8/2013 P=-0.01 I=10.00 min/max = 0.25, improving, but still overshooting -->
      <!-- 4/8/2013 P=-0.007 I=10.00 min/max = 0.25, -->
      <!-- 4/8/2013 P=0.007 I=10.00 min/max = 0.25, Res3 #3 Seemed like not pushing hard enought to get rid of long term error, but really jumpy -->
      <!-- 5/24/2013 P=0.005 I=5.00 min/max = 0.25, Res3 #3 maybe still too snappy? -->
      <!-- 6/17/2013 P=0.004 I=2.00 min/max = 0.25, Res3 #3 seeking better convergence -->
      <!-- 9/5/2013 P=0.004 I=10.00 min/max = 0.25, Seems pretty jittery still, need to soften more. -->
      <Kp>-0.005</Kp>       <!-- proportional gain-->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>20.0</Ti>        <!-- integrator time -->
      <Td>0.0001</Td>      <!-- derivator time -->
      <u_min>-0.30</u_min> <!-- minimum output clamp -->
      <u_max>0.30</u_max>  <!-- maximum output clamp -->
    </config>
  </pid_controller>

  <!-- Altitude hold. -->

  <!-- Drive the throttle based on altitude error -->
  <pid_controller>
    <name>Altitude Hold</name>
    <description>Pressure altimeter based, references AGL</description>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/altitude</prop>
      <value>throttle</value>
    </enable>
    <input>
      <prop>/position/altitude_agl_ft</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_agl_ft</prop>
      <!-- <value>500</value> -->
    </reference>
    <output>
      <prop>/controls/engine/throttle</prop>
    </output>
    <!-- 5/24/2013, Kp=0.006 Ti=20.0 didn't seem to be pushing up to target -->
    <!-- 5/26/2013, (simple) Kp=0.006 Ti=10.0 -->
    <!-- 9/3/2013, convert to full pid and borrow telemaster gains -->
    <!-- 9/11/2013, Kp=0.005 Ti=20 maybe would like a little slower response -->
    <config>
      <Kp>0.01</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>        <!-- integrator time -->
      <Td>0.00001</Td>     <!-- derivator time -->
      <u_min>0.0</u_min>   <!-- minimum output clamp -->
      <u_max>1.0</u_max>   <!-- maximum output clamp -->
    </config>
  </pid_controller>

  <!-- Hold speed by varying elevator (2-stage approach) --> 
  <pid_controller>
    <name>Speed Hold 1</name>
    <description>Stage #1, drive target pitch angle from speed error</description>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>pitch</value>
    </enable>
    <input>
      <prop>/velocity/airspeed_kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_speed_kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target_pitch_deg</prop>
    </output>
    <config>
      <Kp>-1.4</Kp>        <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>15.0</Ti>         <!-- integrator time -->
      <Td>0.000001</Td>    <!-- derivator time -->
      <u_min>-5.0</u_min> <!-- minimum output clamp -->
      <u_max>17.5</u_max>  <!-- maximum output clamp -->
    </config>
  </pid_controller>

  <pid_controller>
    <name>Speed Hold 2</name>
    <description>Stage #2, Drive elevator to hold target pitch angle</description>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/pitch</prop>
      <value>elevator</value>
    </enable>
    <input>
      <prop>/orientation/pitch_deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_pitch_deg</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
    </output>
      <!-- 9/11/2013: Kp = -0.010 alpha = 0.1 Ti = 10.0 Td = 0.0001 adapted from sim work and previous determined elevator gains, but too agressive/jittery -->
    <config>
      <Kp>-0.005</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>      <!-- input value weighing factor -->
      <alpha>0.1</alpha>    <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>    <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>         <!-- integrator time -->
      <Td>0.0001</Td>       <!-- derivator time -->
      <u_min>-0.25</u_min>  <!-- minimum output clamp -->
      <u_max>0.20</u_max>   <!-- maximum output clamp -->
    </config>
  </pid_controller>

  <!-- Hold speed by varying elevator (direct, 1-stage approach) --> 
  <pid_controller>
    <name>Speed hold (vary elevator)</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>elevator_direct</value>
    </enable>
    <input>
      <prop>/velocity/airspeed_kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_speed_kt</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
    </output>
    <!-- 4/26/2013 Kp=-0.025 a=0.5 Ti=10.0 Td=1.0 : ran to extremes and pegged -->
    <!-- 4/29/2013 Kp=-0.001 a=0.5 Ti=10.0 Td=1.0 : starting point for next resolution build? -->
    <!-- 5/10/2013 Kp=0.001 a=0.5 Ti=10.0 Td=1.0 : flip sense for res3 #3 -->
    <!-- 5/11/2013 Kp=0.001 a=0.5 Ti=10.0 Td=1.0 : shift range of motion for new airframe -->
    <!-- 5/11/2013 Kp=0.001 a=0.5 Ti=10.0 Td=1.0 : stayed bounded but oscillated slowly over a long period, probably need to up the global gain a bit. -->
    <!-- 5/11/2013 Kp=0.004 a=0.5 Ti=10.0 Td=1.0 :  better but still laggy -->
    <!-- 5/28/2013 Kp=0.006 a=0.5 Ti=10.0 Td=1.0 :  even better, almost flyable -->
    <!-- 5/28/2013 Kp=0.008 a=0.5 Ti=10.0 Td=1.0 :  would like faster convergence -->
    <!-- 6/17/2013 Kp=0.010 a=0.5 Ti=10.0 Td=1.0 range=-0.15-0.05 clipping on both ends of range:  -->
    <config>
      <Kp>0.010</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.5</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>        <!-- integrator time -->
      <Td>1.1</Td>     <!-- derivator time -->
      <u_min>-0.20</u_min>  <!-- minimum output clamp -->
      <u_max>0.10</u_max>  <!-- maximum output clamp -->
    </config>
  </pid_controller>

</PropertyList>
