<?xml version="1.0"?>

<PropertyList>

  <!-- L1 config parameters, this drives bank angle (implementation in -->
  <!-- route_mgr/task_circle_coord) -->
  <L1_controller>
    <bank_limit_deg>25</bank_limit_deg>
    <period>14</period>
    <damping>1.7</damping>
  </L1_controller>

  <!-- Bank angle hold -->
  <component>
    <module>pid_controller</module>
    <name>Roll angle hold</name>
    <description>Built in L1 controller sets target roll angle</description>
    <debug type="bool">false</debug>
    <enable>
      <prop>/autopilot/locks/roll</prop>
      <value>aileron</value>
    </enable>
    <input>
      <prop>/orientation/roll_deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_roll_deg</prop>
      <!-- <value>0.0</value> -->
    </reference>
    <output>
      <prop>/controls/flight/aileron</prop>
    </output>
    <config>
      <!-- from pitchrate-speed config -->
      <!-- 8/6/2013 noticed control throws saturating, so increase range to 0.6 -->
      <!-- 8/7/2013 Kp = -0.035 Ti = 1.0 Td = 0.0001 worked ok but lots of overshoot/oscillation --> 
      <!-- 8/7/2013 Kp = -0.035 Ti = 2.0 Td = 0.001 too much differential? Too much integral? --> 
      <!-- 8/8/2013 Kp = -0.035 Ti = 3.0 Td = 0.0001 too wobbly, too high overall gain? --> 
      <!-- 8/20/2013 Kp = -0.02 Ti = 3.0 Td = 0.0001 lots of overshoot/oscillations, still not tracking well -->
      <!-- 8/21/2013 Kp = -0.015 Ti = 3.0 Td = 0.0001 less noisy, tracking a bit better, try even lower on Kp? -->
      <!-- 8/28/2013 Kp = -0.010 Ti = 3.0 Td = 0.0001 tracking way too slow, too low on Kp I think -->
      <!-- 8/28/2013 Kp = -0.015 Ti = 10.0 Td = 0.0001 like! -->
      <!-- 8/31/2013 Installed digital servos @ 200hz, Kp = -0.015 Ti = 10.0 Td = 0.0001 now too jittery? -->
      <!-- 10/19/2013 Kp = -0.012 Ti = 10.0 Td = 0.0001 still jittery? -->
      <!-- 10/19/2013 Kp = -0.010 Ti = 2.0 Td = 0.0001 too weak at low speed -->
      <Kp>0.04</Kp>       <!-- proportional gain-->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>        <!-- integrator time -->
      <Td>0.0001</Td>      <!-- derivator time -->
      <u_min>-0.75</u_min> <!-- minimum output clamp -->
      <u_max>0.75</u_max>  <!-- maximum output clamp -->
    </config>
  </component>

  <!-- Altitude hold. -->

  <!-- Drive the throttle based on altitude error -->
  <component>
    <module>pid_controller</module>
    <name>Altitude Hold</name>
    <description>Pressure altimeter based, references AGL</description>
    <debug type="bool">false</debug>
    <enable>
      <prop>/autopilot/locks/altitude</prop>
      <value>throttle</value>
    </enable>
    <input>
      <prop>/position/altitude_agl_ft</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_agl_ft</prop>
      <!-- <value>500</value> -->
    </reference>
    <output>
      <prop>/controls/engine/throttle</prop>
    </output>
    <!-- 8/28/2013, Kp=0.002 Ti=20.0 trying pid-controller here maybe too soft? -->
    <!-- 8/28/2013, Kp=0.003 Ti=20.0 smooth but too laggy?  too much overshoot -->
    <!-- 8/31/2013, Kp=0.004 Ti=20.0 smooth but still too laggy?  too much overshoot -->
    <!-- 10/15/2013, Kp=0.005 Ti=20.0 smooth but too much overshoot, trying new values from sim work ... -->
    <!-- 10/17/2013, Kp=0.020 Ti=10.0 too much hunting ... -->
    <!-- 10/17/2013, Kp=0.010 Ti=10.0 much less overshoot ... would like even less over shoot, but also less hunting ... -->
    <!-- 06/30/2015, Kp=0.015 Ti=15.0 trying for better tracking which is needed for autoland... -->
    <config>
      <Kp>0.015</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>15.0</Ti>        <!-- integrator time -->
      <Td>0.00001</Td>     <!-- derivator time -->
      <u_min>0.0</u_min>   <!-- minimum output clamp -->
      <u_max>1.0</u_max>   <!-- maximum output clamp -->
    </config>
  </component>

  <!-- Hold speed by varying elevator (2-stage approach) --> 
  <component>
    <module>pid_controller</module>
    <name>Speed Hold 1</name>
    <description>Stage #1, drive target pitch angle from speed error</description>
    <debug type="bool">false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>pitch</value>
    </enable>
    <input>
      <prop>/velocity/airspeed_smoothed_kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_speed_kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target_pitch_deg</prop>
    </output>
    <config>
      <Kp>-2.5</Kp>        <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>12.0</Ti>        <!-- integrator time -->
      <Td>0.000001</Td>    <!-- derivator time -->
      <u_min>-10.0</u_min> <!-- minimum output clamp -->
      <u_max>15.0</u_max>  <!-- maximum output clamp -->
    </config>
  </component>

  <component>
    <module>pid_controller</module>
    <name>Speed Hold 2</name>
    <description>Stage #2, Drive elevator to hold target pitch angle</description>
    <debug type="bool">false</debug>
    <enable>
      <prop>/autopilot/locks/pitch</prop>
      <value>elevator</value>
    </enable>
    <input>
      <prop>/orientation/pitch_deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_pitch_deg</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
    </output>
      <!-- 9/11/2013: Kp = 0.02 alpha = 0.1 Ti = 10.0 Td = 0.0001 adapted from sim/direct numbers, but still too agressive @ 10/19/2013? -->
    <config>
      <Kp>0.06</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>        <!-- integrator time -->
      <Td>0.0001</Td>      <!-- derivator time -->
      <u_min>-0.60</u_min> <!-- minimum output clamp -->
      <u_max>0.50</u_max>  <!-- maximum output clamp -->
    </config>
  </component>

  <!-- Hold speed by varying elevator (direct, 1-stage approach) --> 
  <component>
    <module>pid_controller</module>
    <name>Speed hold (vary elevator)</name>
    <debug type="bool">false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>elevator_direct</value>
    </enable>
    <input>
      <prop>/velocity/airspeed_kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target_speed_kt</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
    </output>
    <!-- 7/19/2013 - first try on telemaster, need to validate gains -->
    <!-- 8/6/2013 - Kp = -0.02 Td = 1.0 (over fighting change?)  u_min = -0.25 (saturating) -->
    <!-- 8/7/2013 - Kp = -0.02 Td = 0.2  u_min = -0.35 slow chasing oscillations -->
    <!-- 8/7/2013 - Kp = -0.03 Td = 0.8  u_min = -0.35 worked ok -->
    <!-- 8/7/2013 - Kp = -0.03 Td = 0.7  u_min = -0.35 moving wrong direction for stability -->
    <!-- 8/7/2013 - Kp = -0.03 Td = 1.0  u_min = -0.35 over fighting change -->
    <!-- 8/8/2013 - Kp = -0.035 Td = 0.8  ok, but wishing for better lock on target -->
    <!-- 8/15/2013: Kp = -0.040 alpha = 0.25 Ti = 8.0 Td = 0.8  like, but still oscillating/chasing in a slow period -->
    <!-- 8/20/2013: Kp = -0.040 alpha = 0.25 Ti = 8.0 Td = 0.8  like, but noisy noisy after turning off the low pass filter on airspeed. -->
    <!-- 8/21/2013: Kp = -0.020 alpha = 0.25 Ti = 8.0 Td = 1.0  probably best so far but still noisy elevator motion, lower the Kp even more, but keep Kp*Td about the same. -->
    <!-- 8/28/2013: Kp = -0.015 alpha = 0.25 Ti = 8.0 Td = 1.4  not responsive enough? -->
    <!-- 8/28/2013: Kp = -0.016 alpha = 0.25 Ti = 8.0 Td = 1.3  still not responsive enough? -->
    <!-- 8/31/2013: installed digital servos. -->
    <!-- 8/31/2013: Kp = -0.017 alpha = 0.25 Ti = 8.0 Td = 1.3  Jittery, too much Td? -->
    <config>
      <Kp>0.015</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.25</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
      <!-- unfiltered derivative error -->
      <Ti>8.0</Ti>         <!-- integrator time -->
      <Td>1.2</Td>         <!-- derivator time -->
      <u_min>-0.30</u_min> <!-- minimum output clamp -->
      <u_max>0.30</u_max>  <!-- maximum output clamp -->
    </config>
  </component>

</PropertyList>
