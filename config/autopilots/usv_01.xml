<?xml version="1.0"?>

<PropertyList>

  <!-- L1 config parameters, this drives bank angle (implementation in -->
  <L1_controller>
    <bank_limit_deg>35</bank_limit_deg>
    <period>12</period>
    <damping>1.7</damping>
  </L1_controller>

  <!-- Heading hold -->
  <component>
    <module>pid_vel_component</module>
    <name>Heading hold</name>
    <description>Built in L1 controller sets target roll angle</description>
    <debug type="bool">false</debug>
    <enable>
      <prop>/autopilot/locks/roll</prop>
      <value>aileron</value>
    </enable>
    <input>
      <prop>/orientation/groundtrack_deg</prop>
    </input>
    <reference>
      <prop>/autopilot/targets/groundtrack_deg</prop>
    </reference>
    <output>
      <prop>/controls/flight/rudder</prop>
    </output>
    <config>
      <Kp>0.03</Kp>        <!-- proportional gain-->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>        <!-- integrator time -->
      <Td>0.0001</Td>      <!-- derivator time -->
      <u_min>-1.00</u_min> <!-- minimum output clamp -->
      <u_max>1.00</u_max>  <!-- maximum output clamp -->
    </config>
  </component>
</PropertyList>
