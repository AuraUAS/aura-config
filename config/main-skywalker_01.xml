<?xml version="1.0"?>

<!-- Master config file -->

<PropertyList>

  <config>

    <!-- Aircraft identity information -->
    <identity>
      <make>Hobbyking</make>
      <model>Skywalker 1900</model>
      <serial_number>01</serial_number>
      <call_sign>Sky 1</call_sign>
    </identity>
    
    <!-- Onboard data logging. -->
    <logging include="comms/log-overo.xml">                                 
      <path n="0">/root/FlightData</path>                        
    </logging>

    <!-- Remote operator communication. -->
    <remote_link include="comms/remote-link-3dr.xml" />

    <!-- socket based remote monitoring and control interface -->
    <telnet include="comms/telnet.xml" />

    <!-- Sensor selection and configuration. -->
    <sensors include="sensors/group-APM2.xml">
      <APM2 n="0">
        <device n="0">/dev/ttyO1</device>
        <pitot_calibrate_factor n="0">1.27</pitot_calibrate_factor>
        <volt_divider_ratio n="0">10.01</volt_divider_ratio>
	<battery_cells n="0">4</battery_cells>
        <external_amp_ratio n="0">26.4</external_amp_ratio>
      </APM2>
      <imu_group n="0">
        <imu n="0">
	  <calibration n="0" include="sensors/imu-calibration/skywalker_01_101.xml" />
        </imu>
      </imu_group>
    </sensors>
    <!-- <sensors include="sensors/group-fgfs24.xml" /> -->

    <!-- Filters configuration -->
    <filters>
      <!-- Magnetic Declination (Variation) -->
      <!-- You can force a value or specify "auto" to have the system -->
      <!-- compute a magnetic variation based on initial gps location and -->
      <!-- date. -->
      <!-- <magvar-deg>0.827</magvar-deg> --> <!-- @KANE, 01/17/2009 -->
      <magvar_deg>auto</magvar_deg>

      <!-- Time in seconds we will project forward on inertials alone after -->
      <!-- losing a gps solution. -->
      <gps_timeout_sec>15.0</gps_timeout_sec>

      <filter include="filters/umngnss-quat.xml" />
    </filters>

    <pointing include="pointing.xml" />

    <!-- Autopilot and control configuration. -->
    <fcs>
      <!-- set value to true to enable the fcs -->
      <enable type="bool">true</enable>

      <!-- route or cas -->
      <mode>route</mode> 

      <!-- select the autopilot configuration -->
      <autopilot include="autopilots/skywalker_01.xml" />
      <!-- <autopilot include="autopilots/Resolution3-ele-speed.xml" /> -->
      <!-- <autopilot include="autopilots/Rascal110-fgfs-ele-speed.xml" /> -->
      <!-- <autopilot include="autopilots/FlyCamOne3.xml" /> -->
    </fcs>

    <!-- Primary mission selection and configuration. -->
    <mission include="missions/skywalker.xml" />

    <!-- Actuator selection and configuration. -->
    <actuators>
      <actuator include="actuators/APM2-skywalker_01.xml" />
    </actuators>

  </config>

</PropertyList>
