<?xml version="1.0"?>

<!-- Master config file -->

<PropertyList>

  <config>

    <!-- Aircraft identity information -->
    <identity>
      <make>E-Flite</make>
      <model>Ultra Stick 25e</model>
      <serial_number>N801MN</serial_number>
      <call_sign>Tyr</call_sign>
    </identity>
    
    <!-- Onboard data logging. -->
    <logging include="comms/log-high-rate.xml">
      <path overlay="true">/root/FlightData</path>
    </logging>

    <!-- Remote operator communication. -->
    <remote_link include="comms/remote-link-xtend.xml">
      <device overlay="true">/dev/ttyO1</device>
    </remote_link>

    <!-- socket based remote monitoring and control interface -->
    <telnet include="comms/telnet.xml" />

    <!-- Sensor selection and configuration. -->
    <sensors include="sensors/group-Goldy2.xml">
      <Goldy2 overlay="true">
        <host overlay="true">192.168.143.130</host>
        <port overlay="true">55455</port>
      </Goldy2>
      <imu_group overlay="true">
        <imu overlay="true">
          <imu_orientation>reverse</imu_orientation>
          <calibration include="sensors/imu-calibration/goldy2_02.xml" />
        </imu>
      </imu_group>
      <pilot_inputs overlay="true">
        <pilot_input overlay="true">
	  <wing_mixing overlay="true" type="bool">false</wing_mixing>
          <symmetric n="0" type="bool">true</symmetric>
          <symmetric n="1" type="bool">false</symmetric>
          <symmetric n="2" type="bool">true</symmetric>
          <symmetric n="3" type="bool">true</symmetric>
          <symmetric n="4" type="bool">true</symmetric>
          <symmetric n="5" type="bool">true</symmetric>
          <symmetric n="6" type="bool">true</symmetric>
          <symmetric n="7" type="bool">true</symmetric>
          <symmetric n="8" type="bool">true</symmetric>
          <symmetric n="9" type="bool">true</symmetric>
          <channel n="0">ap_master_switch</channel>
          <channel n="1">throttle</channel>
          <channel n="2">rudder</channel>
          <channel n="3">elevator</channel>
          <channel n="4">left_aileron</channel>
          <channel n="5">left_flap</channel>
          <channel n="6">flaps</channel>
          <channel n="7">aileron</channel>
          <channel n="8">flight_mode</channel>
          <channel n="9">task_engage</channel>
          <invert n="0" type="bool">true</invert>
        </pilot_input>
      </pilot_inputs>
    </sensors>

    <!-- Magnetic Declination (Variation) -->
    <!-- You can force a value or specify "auto" to have the system -->
    <!-- compute a magnetic variation based on initial gps location and -->
    <!-- date. -->
    <!-- <magvar-deg>0.827</magvar-deg> --> <!-- @KANE, 01/17/2009 -->
    <magvar_deg>auto</magvar_deg>

    <!-- Time in seconds we will project forward on inertials alone after -->
    <!-- losing a gps solution. -->
    <gps_timeout_sec>15.0</gps_timeout_sec>

    <!-- Filters configuration -->
    <filters>
      <filter include="filters/nav-eigen.xml" />
      <!-- <filter include="filters/umngnss-quat.xml" /> -->
    </filters>

    <!-- Autopilot and control configuration. -->
    <autopilot include="autopilots/tyr.xml" />

    <!-- Primary mission selection and configuration. -->
    <mission include="missions/tuna.xml" />
    <route include="routes/bowtie-300m.xml" />

    <!-- Actuator selection and configuration. -->
    <actuators>
      <actuator include="actuators/Goldy2.xml">
        <controls_mapping overlay="true">tyr</controls_mapping>
      </actuator>
    </actuators>

  </config>

</PropertyList>
