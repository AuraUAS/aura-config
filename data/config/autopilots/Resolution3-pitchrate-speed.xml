<?xml version="1.0"?>

<PropertyList>

  <!-- Route following, 2 stage cascading controller -->

  <!-- Stage #1: set target bank angle based on heading error -->
  <pi-simple-controller>
    <name>True Heading Hold (DG based) Stage 1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/heading</prop>
      <value>route</value>
    </enable>
    <input>
      <prop>/autopilot/internal/wind-true-error-deg</prop>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <prop>/autopilot/settings/target-roll-deg</prop>
    </output>
    <config>
      <Kp>-0.3</Kp>        <!-- proportional gain -->
      <Ki>0.0</Ki>         <!-- integral gain -->
      <u_min>-20.0</u_min> <!-- minimum output clamp -->
      <u_max>20.0</u_max>  <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

  <!-- Stage #2: set aileron surface command based on target bank angle -->
  <pid-controller>
    <name>Roll angle hold</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/roll</prop>
      <value>aileron</value>
    </enable>
    <input>
      <prop>/orientation/roll-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-roll-deg</prop>
      <!-- <value>0.0</value> -->
    </reference>
    <output>
      <prop>/controls/flight/aileron</prop>
    </output>
    <config>
      <!-- 4/4/2013 P=-0.025 I=1.00 min/max = 0.20, seems way slow and laggy, and saturates -->
      <!-- 4/7/2013 P=-0.05 I=1.00 min/max = 0.25, seems even more wild -->
      <!-- 4/7/2013 P=-0.01 I=0.50 min/max = 0.25, tons of overshoot and oscillations -->
      <!-- 4/7/2013 P=-0.01 I=2.00 min/max = 0.25, still tons of overshoot -->
      <!-- 4/8/2013 P=-0.01 I=10.00 min/max = 0.25, -->
      <Kp>-0.01</Kp>       <!-- proportional gain-->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>        <!-- integrator time -->
      <Td>0.0001</Td>      <!-- derivator time -->
      <u_min>-0.25</u_min> <!-- minimum output clamp -->
      <u_max>0.25</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

  <!-- Altitude hold.  2 stage cascade controller. -->

  <!-- Stage #1 sets target rate of climb based on diff between current -->
  <!-- alt and target altitude. -->
  <pi-simple-controller>
    <name>Altitude Hold (Pressure altimeter based, references AGL) Stage 1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/altitude</prop>
      <value>throttle</value>
    </enable>
    <input>
      <prop>/position/altitude-pressure-agl-ft</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-agl-ft</prop>
      <!-- <value>1000</value> -->
    </reference>
    <output>
      <prop>/autopilot/internal/target-climb-rate-fps</prop>
    </output>
    <config>
      <Kp>0.10</Kp>            <!-- proportional gain -->
      <Ki>0.0</Ki>
      <u_min>-8.33</u_min>     <!-- minimum output clamp -->
      <u_max>5.00</u_max>      <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

  <!-- Stage #2 drives the throttle to achieve the desired climb rate. -->
  <pid-controller>
    <name>Altitude Hold (Altimeter based) Stage 2</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/altitude</prop>
      <value>throttle</value>
    </enable>
    <input>
      <prop>/velocity/pressure-vertical-speed-fps</prop>
    </input>
    <reference>
      <prop>/autopilot/internal/target-climb-rate-fps</prop>
    </reference>
    <output>
      <prop>/controls/engine/throttle</prop>
    </output>
    <config>
      <Kp>0.013</Kp>        <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>        <!-- integrator time -->
      <Td>0.00001</Td>     <!-- derivator time -->
      <u_min>0.0</u_min>   <!-- minimum output clamp -->
      <u_max>1.0</u_max>   <!-- maximum output clamp -->
    </config>
  </pid-controller>

  <!-- Hold speed by varying elevator (2 stage cascading controller)--> 

  <!-- Stage 1, command a pitch rate based on velocity error -->
  <pi-simple-controller>
    <name>Speed hold (vary elevator)</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>elevator</value>
    </enable>
    <input>
      <prop>/velocity/airspeed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-the-dot</prop>
    </output>
    <config>
      <!-- increased gains to produce a more aggressive target pitch rate -->
      <Kp>-0.014</Kp>	       <!-- prop gain: 5 kt error = 4 deg/sec-->
      <Ki>0.0</Ki>             <!-- integral gain -->
      <u_min>-0.070</u_min>      <!-- minimum output clamp (-4 deg/sec) -->
      <u_max>0.140</u_max>       <!-- maximum output clamp (+8 deg/sec)-->
    </config>
  </pi-simple-controller>

  <!-- Stage 2, command elevator to achieve target pitch rate -->
  <pid-controller>
    <name>Speed hold (vary elevator)</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>elevator</value>
    </enable>
    <input>
      <prop>/orientation/the-dot-rad_sec</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-the-dot</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
    </output>
    <config>
      <!-- 4/4/2013 P=0.1 I=0.20, correct elevator sense, mostly convergent, about 2hz oscillations though in elevator and pitch rate, dial down a bit? -->
      <!-- 4/7/2013 P=0.08 I=0.50, correct elevator sense, mostly convergent, still seems like a lot of oscillatiions? -->
      <!-- 4/8/2013 P=0.05 I=0.50, -->
      <Kp>0.05</Kp>        <!-- proportional gain -->
      <beta>1.0</beta>     <!-- input value weighing factor -->
      <alpha>0.1</alpha>   <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>   <!-- input value weighing factor for -->
                           <!-- unfiltered derivative error -->
      <Ti>0.50</Ti>        <!-- integrator time -->
      <Td>0.00005</Td>     <!-- derivator time -->
      <u_min>0.10</u_min>  <!-- minimum output clamp -->
      <u_max>0.30</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

</PropertyList>
