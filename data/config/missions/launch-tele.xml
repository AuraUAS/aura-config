<?xml version="1.0"?>

<PropertyList>

  <enable type="bool">true</enable>

  <!-- global tasks: each of these are run every iteration -->
  <global-tasks>
    <task>
      <name>home-manager</name>
    </task>

    <task>
      <name>lost-link</name>
      <timeout-sec>60</timeout-sec>
      <action-nickname>circle-home</action-nickname>
    </task>

    <task>
      <name>throttle-safety</name>
      <!-- safety "off" means throttle can run -->
      <off-alt-agl-ft>0</off-alt-agl-ft>
      <off-ground-speed-kt>0</off-ground-speed-kt>
      <off-air-speed-kt>0</off-air-speed-kt>
      <off-accel-g>0.0</off-accel-g>
      <!-- safety "on" means throttle cannot run -->
      <on-alt-agl-ft>0</on-alt-agl-ft>
      <on-ground-speed-kt>0</on-ground-speed-kt>
      <on-air-speed-kt>0</on-air-speed-kt>
    </task>

    <task>
      <name>is-airborne</name>
      <!-- "off" in the sense of "off" the ground if we exceed these values -->
      <off-alt-agl-ft>10</off-alt-agl-ft>
      <off-ground-speed-kt>10</off-ground-speed-kt>
      <off-air-speed-kt>15</off-air-speed-kt>
      <!-- "on" the ground if we drop below these values-->
      <on-ground-speed-kt>5</on-ground-speed-kt>
      <on-air-speed-kt>10</on-air-speed-kt>
    </task>

    <task>
      <name>camera-trigger</name>
      <vert-fov-deg>29.3273</vert-fov-deg>
      <overlap-pct>0.25</overlap-pct>
      <min-agl-ft>200.0</min-agl-ft>
      <min-rate-sec>3.0</min-rate-sec>
      <max-rate-sec>60.0</max-rate-sec>
    </task>

  </global-tasks>

  <!-- sequential tasks: only the front item in the fifo queue is run -->
  <sequential-tasks>
    <task>
      <name>launch</name>
      <speed-kt>25</speed-kt>
      <completion-alt-ft>200</completion-alt-ft>
      <steering-gain>0.025</steering-gain>
      <max-steer>0.5</max-steer>
      <roll-gain>0.5</roll-gain>
      <roll-limit>5.0</roll-limit>
      <elevator-min>0.0</elevator-min>
      <elevator-max>1.0</elevator-max>
    </task>

    <task>
      <name>route</name>
      <route include="../routes/bowtie-300m.xml" />
      <bank-limit-deg>25</bank-limit-deg>
      <L1-period>30.0</L1-period>
      <L1-damping>0.7</L1-damping>
      <xtrack-steer-gain>0.4</xtrack-steer-gain>
      <altitude-agl-ft>500</altitude-agl-ft>
      <speed-kt>25</speed-kt>
    </task>
  </sequential-tasks>

  <!-- standby tasks: a list of tasks that are initialized and configured -->
  <!-- and could be moved to the global or sequential task lists at any -->
  <!-- time. -->
  <standby-tasks>
    <task>
      <name>circle-coord</name>
      <nickname>circle-home</nickname>
      <config>/mission/home</config>
      <radius-m>100</radius-m>
      <bank-limit-deg>25</bank-limit-deg>
      <L1-period>30.0</L1-period>
      <altitude-agl-ft>500</altitude-agl-ft>
      <speed-kt>25</speed-kt>
    </task>

    <task>
      <name>circle-coord</name>
      <nickname>circle-target</nickname>
      <config>/mission/circle</config>
      <radius-m>100</radius-m>
      <bank-limit-deg>25</bank-limit-deg>
      <L1-period>30.0</L1-period>
    </task>
    <task>
      <name>land</name>
      <lateral-offset-m>0.0</lateral-offset-m>
      <glideslope-deg>5.5</glideslope-deg>
      <turn-radius-m>75</turn-radius-m>
      <turn-steps>8</turn-steps>
      <direction>left</direction>
      <extend-final-leg-m>150</extend-final-leg-m>
      <alt-bias-ft>0</alt-bias-ft>
      <approach-speed-kt>25</approach-speed-kt>
      <flare-speed-kt>20</flare-speed-kt>
      <flare-seconds>3.0</flare-seconds>
      <xtrack-steer-gain>0.4</xtrack-steer-gain>
    </task>
  </standby-tasks>

</PropertyList>
