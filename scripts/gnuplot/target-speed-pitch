# plot pitch vs. speed parameters

set ytics nomirror
set y2label "Elevator"
set y2tics

plot \
     "ap.txt" using 1:8 with lines title "Target Airspeed (kts)", \
     "air.txt" using 1:4 with lines title "Indicated Airspeed (kts)", \
     "air.txt" using 1:($4*$11) with lines title "True Airspeed (kts)", \
     "ap.txt" using 1:6 with lines title "Target Pitch (deg)", \
     "filter.txt" using 1:9 with lines title "Actual Pitch (deg)", \
     "act.txt" using 1:3 with lines axis x1y2 title "AP Elevator Defl", \
     "pilot.txt" using 1:3 with lines axis x1y2 title "Pilot Elevator Defl"
